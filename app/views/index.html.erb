<div class="jumbotron shadow">
	<h1 class="text-center">
	  <%= root_page_title %>
	</h1>
	<h2 class="text-center">
	  <em>
	    <%= root_page_tagline %>
	  </em>
	</h2>
</div>
<%= tag :img, 'src="images/C11_P1.jpg" class="img-circle img-responsive center-block shadow" alt="Religious icon depicting Constantine XI." id="title_image"' %>
<% if !logged_in? %>
	<div class="row">
		<div class="col-xs-6">
			<a href="/forum_users/new">
				<div class="jumbotron shadow">
					<h2 class="text-center">Sign Up</h2>
				</div>
			</a>
		</div>
		<div class="col-xs-6">
			<%= link_to("", login_path) { content_tag(:div, "", {class: "jumbotron"}) { content_tag(:h2, "Log In", {class: "text-center"}) } } %>
		</div>
	</div>
<% else %>
	<a href="/forum_threads">
		<div class="jumbotron shadow">
			<h2 class="text-center">View Threads</h2>
		</div>
	</a>
<% end %>
