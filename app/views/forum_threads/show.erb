<div class="jumbotron text-center shadow">
	<h1><%=@thread.title%></h1>
</div>
<div class="jumbotron shadow">
	<% @thread_posts.each do |post| %>
		<div class="forum-divider-top clearfix <%="forum-divider-bottom" if post == @thread_posts.last%>">
			<div class="row" id="<%=post.id%>">
				<% if post.forum_user != current_user %>
					<form method="get" action="/forum_posts/new/<%=@thread.slug%>" class=" quarter-width center-block top-margin-10px">
					<input type="hidden" name="cached_post" value="<blockquote class='quote'>&#13;&#10;<%=post.content%>&#13;&#10;<footer><cite class='citation'><%=post.forum_user.username%> @ <%=format_time(post.updated_at)%></cite></footer></blockquote>&#13;&#10;&#13;&#10;">
					<button type="submit" id="quote" class="btn btn-primary btn-forum shadow">
						<i class="fa fa-quote-left"></i> Quote
		 			</button>
		 			</form>
				<% end %>
				<div class="col-xs-4">
					<br>
					<a href="/forum_users/<%=post.forum_user.slug%>">
						<h3><%=post.forum_user.username%></h3>
					</a>
					<h4>Updated:</h4>
					<h5><%=format_time(post.updated_at)%></h5>
					<h4>Created:</h4>
					<h5><%=format_time(post.created_at)%></h5>
					<br>
				</div>
				<div class="col-xs-8">
					<br>
					<p><%=post.content%></p>
					<br>
				</div>
			</div>
			<% if moderator? || post.forum_user == current_user %>
				<a href="/forum_posts/<%=post.id%>/edit">
				<button type="submit" id="edit" class="btn btn-primary btn-forum pull-right quarter-width shadow">
					<i class="fa fa-pencil-square-o"></i> Edit
	 			</button>
	 			</a>
	 			<% if @thread_posts.size == 1 || post != @thread_posts.first %>
					<form method="post" action="/forum_posts" class="quarter-width">
						<input type="hidden" name="_method" value="delete">
						<input type="hidden" name="forum_post[id]" value=<%=post.id%>>
						<button type="submit" id="delete" class="btn btn-primary btn-forum shadow">
						<input type="hidden" name="cached_route" value="<%=current_route%>">
							<i class="fa fa-bomb"></i> Delete
			 			</button>
			 		</form>
		 		<% end %>
			<% end %>
		</div>
	<% end %>
</div>
<a href="/forum_posts/new/<%=@thread.slug%>">
	<div class="jumbotron shadow">
		<h2 class="text-center">Post to Thread</h2>
	</div>
</a>