<div class="jumbotron text-center shadow">
	<h2 class="forum-divider-bottom">Creating a New Thread!</h2>
	<form method="post" action="/forum_threads" class="center-block half-width">
		<div class="form-group">
			<label for="title">Title:</label>
			<input class="form-control" id="title" name="forum_thread[title]" type="text">
		</div>
		<div class="form-group">
			<label for="content">Post Content:</label>
			<textarea class="form-control" id="content" name="forum_post[content]" type="text"></textarea>
		</div>
		<input type="hidden" name="forum_post[forum_user_id]" value=<%=current_user.id%>>
		<button type="submit" id="create_thread" class="btn btn-primary btn-forum shadow">
			<i class="fa fa-paper-plane"></i> Create Thread
		</button>
	</form>
</div>