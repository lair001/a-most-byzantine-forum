<div class="jumbotron text-center shadow">
	<h1>Users</h1>
	<h2><em>Your Rivals in the Basileus's Court</em></h2>
	<form class="quarter-width center-block" method="post" action="/forum_users/search" role="search">
		<div class="form-group">
			<input type="text" class="form-control forum-input" placeholder="<%= params[:message] ? params[:message] : 'Username Search' %>" name="forum_user[username]">
		</div>
		<button type="submit" class="btn btn-primary btn-forum shadow">
			<i class="fa fa-search"></i> Search
		</button>
	</form>
</div>
<div class="jumbotron shadow">
	<% @users.each do |user| %>
		<div class="forum-divider-top <%="forum-divider-bottom" if user == @users.last%>">
			<div class="row">
				<div class="col-xs-4">
					<br>
					<h4>Last Seen:</h4>
					<h5><%=format_time(user.updated_at)%></h5>
					<h4>Joined:</h4>
					<h5><%=format_time(user.created_at)%></h5>
					<br>
				</div>
				<div class="col-xs-8 text-center">
					<br>
					<a href="/forum_users/<%=user.slug%>">
						<h3><%=user.username%></h3>
					</a>
					<% if user.administrator && user.moderator %>
						<%= "<h4><em>Superuser</em></h4>" %>
					<% elsif user.administrator %>
						<%= "<h4><em>Administrator</em></h4>" %>
					<% elsif user.moderator %>
						<%= "<h4><em>Moderator</em></h4>" %>
					<% else %>
						<%= "<h4><em>Courtier</em></h4>" %>
					<% end %>
					<h5><%=user.email%></h5>
					<br>
				</div>
			</div>
		</div>
	<% end %>
</div>